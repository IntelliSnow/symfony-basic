{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">

            <table class="table">
                <thead>
                <tr>
                    <td>Name</td>
                    <td>
                        <a href="{{ path('category_create') }}">Create</a>
                    </td>
                </tr>
                </thead>

                <tbody>
                {# @var category \App\Entity\Category #}
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>

                        <td>
                            <a href="{{ path('category_update', {'id': category.id}) }}">Update</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>

        </div>
    </div>
{% endblock %}
